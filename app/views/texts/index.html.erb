<%= link_to "New Text", new_text_path %>
<% @texts.each do |text| %>
  <div id="editor1" contenteditable="true">
  	<%= text.description.html_safe %>
  </div>
  <%= link_to "Edit Text", edit_text_path(text) %>
  <% if text != @texts.last %>
  <hr />
  <% end %>
<% end %>
<% @texts.each do |text| %>
<%= form_for text do |f| %>
  <div>
    <%= f.hidden_field :description, rows: 10,  id: 'yea'  %>
  </div>
  <div>
    <%= f.submit "Salvar MudanÃ§as", id: "teste", hidden: true%>
  </div>
<% end %>
<% end %>


<script>
    // Turn off automatic editor creation first.

    CKEDITOR.disableAutoInline = true;
    CKEDITOR.inline( 'editor1', {
            on: {
                blur: function( event ) {
            var data = CKEDITOR.instances.editor1.getData();
            document.getElementById("yea").value=data;
            $('#teste').trigger( "click" );
              }
            }
        });
  

</script>

