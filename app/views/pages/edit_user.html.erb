<h2>Editar Instituicão</h2>

<%= simple_form_for(resource, :as => resource_name, :url => edit_user_registration_path(resource_name), :html => { :method => :put }) do |f|%>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: "E-mail" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: "Senha" %>
    <%= f.input :password_confirmation, required: true, label: "Confirmar Senha" %>
    <%= f.input :name_institute, required: true, label: "Nome da Instituicão" %>
    <%= f.input :name_responsible, required: true, label: "Nome do Responsável" %>
    <%= f.input :phone, required: true, label: "Telefone" %>
    <%= f.input :role_id, as: :hidden, input_html: {value: "2"} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar" %>
  </div>
<% end %>