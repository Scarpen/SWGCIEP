<div class="container-fluid">
  <div class="row row-offcanvas row-offcanvas-left">
    <div class="col-md-12">
      <h2 style="text-align: center;"> Gerenciar Menu </h2>
        <%= simple_form_for @page do |f| %>  
          <h2> Posicao do Menu: </h2>
            <%= f.collection_radio_buttons :menu_config, [[1, 'Esquerdo'],[2, 'Direito']], :first, :last, :checked => @page.menu_config %>

          <h2> Header: </h2>
            <%= f.collection_radio_buttons :header_config, [[1, 'Mostrar'],[2, 'Esconder']], :first, :last, :checked => @page.header_config %>

          <p><%= f.submit "Submit" %></p>
        <% end %>
    </div>
  </div>
</div>
