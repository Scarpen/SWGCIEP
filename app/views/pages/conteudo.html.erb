<div class="panel panel-primary" >
<div class="container-fluid" >
  <div class="row row-offcanvas row-offcanvas-left">
    <center><div class="col-md-12" >
     <h1 style="margin-top:40px;"><b>Gerenciar Conteúdo</b></h1>
        <% @menus.each do |menu| %>
		<% if menu.father_id == nil%>
			<% if menu.submenus.size > 0 %>
				<h3 style="color:#000000; font-weight:bold;"><%= menu.name %></h3>
				<div style="margin-left: 20px">
					<div class="row">
					<% menu.submenus.each do |submenu| %>
						<div class="col-md-6" >
						<h3 style="color:#000000;"><%=	submenu.name%></h3>
						<%= link_to "Editar Conteúdo", edit_menu_path(submenu),class: "btn btn-lg btn-success btn-block", style:"height:45px; width:160px;"  %><br>
					</div>
					<% end %>
					
					</div>
				</div>
			<% else %>
				<h3 style="color:#000000; font-weight:bold;"><%= menu.name %></h3>
				<%= link_to "Editar Conteúdo", edit_menu_path(menu),class: "btn btn-lg btn-success btn-block", style:"height:45px; width:160px;" %><br>
			<% end %>
			<hr />
		<% end %>
	<% end %>
    </div></center>
  </div>
</div>
<br><br><br><br><br><br>
</div>
	