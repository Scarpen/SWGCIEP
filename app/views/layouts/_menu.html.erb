<div class="col-md-3">
	<div class = "row">
	          <center>  <div style="font-weight:bold; width: 150px;" >
              <%= @page.recommends.to_i  %> já recomendaram!
              <% if @voted != true %>
                <%= link_to action: "vote", controller: "pages", page: @page.id, menu: @menu.id do %>
                  <div class="like-icon"> </div>
                <% end %>
              <% else %>
                  <div class="like-icon2"> </div>
                  <center>Você também!</center>
              <% end %>
            </div></center>
    </div>
    <br><br>
	<div class="category_widget">
      <h3>Menu</h3>
      <ul class="list-unstyled arrow">
      	<% @page.menus.each do |m| %>
          	<% if m.submenus.first == nil %>
				<li> <%= link_to "#{m.name}", m %> </li>
			<% else %> 
			<li > <a class="menu<%=m.id%>">  <%= m.name %> </a> </li>
				<div id="submenus<%=m.id%>">
				<% m.submenus.each do |sub|%>
					<li style="margin-left: 20px;"> <%= link_to "#{sub.name}", sub %> </li>
				<% end %>
				</div>
			<% end %>
		<% end %>
      </ul>
	</div>
</div>