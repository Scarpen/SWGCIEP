<%= simple_form_for(@comment, :url => comments_path(@comment, :menu_id => @menu ))  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :author %>
    <%= f.input :comment, as: :text %>
    
    <%= f.input :father_id, as: :hidden, :input_html => {value: @father}%>

  </div>

  <div class="form-actions">
    <%= f.button :submit  %>

  </div>
<% end %>
