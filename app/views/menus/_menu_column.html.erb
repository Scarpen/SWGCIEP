<ul>
	<% @page.menus.each do |m| %> 
		<% if m.submenus.first == nil %>
		<li> <%= link_to "#{m.name}", m %> </li>
		<% else %>
		<li> <%= m.name %> </li>
			<% m.submenus.each do |sub|%>
			<li style="margin-left: 20px"> <%= link_to "#{sub.name}", sub %> </li>
			<% end %>
		<% end %>
	<% end %>
</ul>
<%= @page.recommends %>
<% if @voted != true %>
	<%= link_to "Recomendar Instituicao", {action: "vote", controller: "pages", page: @page.id, menu: @menu.id } %>
<% else %>
	<p> Voce ja recomendou essa instituicao </p>
<% end %>
