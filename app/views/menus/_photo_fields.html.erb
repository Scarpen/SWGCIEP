<div class="nested-fields" >
	<div class="col-md-4">
	  <div class="panel panel-primary" >
	    <div class="panel-heading " >
	      	<h3 class="panel-title">Foto
		    <%= link_to_remove_association "X", f, class: "btn btn-danger btn-xs", style: "float:right" %></h3>
	    </div>
	    
	    <div class="panel-body" style="height:300px;">
	      <div class="form-inputs">
	        <div class="form-group">
	          <div class="col-md-12">
	          	<p class="fields">
				  	   <%= image_tag f.object.image_url(:small) if f.object.image_url != nil %>
				  	   <center>
				  	   	<div class="fileUpload btn btn-primary">
				  	   		<span>Enviar</span>
					   		<%= f.file_field :image, class: "upload" %>
					   		</div>
						</center>
						<br>
					   <%= f.label "Descrição" %><br>
					   <%= f.text_area :description, style: "resize: none", rows: 5, cols:30 %>
				</p>
	          </div>
	        </div>
	        <end%>
	      </div>
	    </div> <!-- close panel body -->
	  </div> <!-- panel primary -->
	</div>
</div>
